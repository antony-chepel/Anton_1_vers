<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ht_plinko"
    tools:context=".game.Game">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="384dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55">

        <ImageView
            android:id="@+id/vokbkcv"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:contentDescription="fst_img"
            android:scaleType="centerCrop"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/bl_hotpl" />

        <ImageView
            android:id="@+id/coxkvkocxko"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:contentDescription="sec_img"
            android:scaleType="centerCrop"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/bl_hotpl" />

        <ImageView
            android:id="@+id/vijcvbjiv"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:contentDescription="thrd_img"
            android:scaleType="centerCrop"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/bl_hotpl" />


        <ImageView
            android:id="@+id/eokdskoakodas"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:contentDescription="fourd_img"
            android:scaleType="centerCrop"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/bl_hotpl" />

        <ImageView
            android:id="@+id/eokdsaokoasd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="fifth_img"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/diamnd_item" />

        <ImageView
            android:id="@+id/udiwqdo"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:contentDescription="sixth_img"
            android:scaleType="centerCrop"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/bl_hotpl" />


    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/cixjvixc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />

    <TextView
        android:id="@+id/ijjisdia"
        android:layout_width="170dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Score: 0"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.582"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catch all secret items faster"
        android:textSize="23sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/cixjvixc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>